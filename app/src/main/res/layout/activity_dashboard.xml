<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <androidx.cardview.widget.CardView
        android:id="@+id/foodname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/toplogorow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/toplogo"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:baselineAlignBottom="false"
                app:srcCompat="@drawable/newiconblack"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/topmockupwarning"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:text="mockup"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="22sp" />
        </TableRow>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/dashscroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/maintop"
                android:layout_width="413dp"
                android:layout_height="140dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="8dp"
                android:visibility="visible"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/pinkbackground" />

                <TableLayout
                    android:id="@+id/topcardstable"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:id="@+id/toprow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="30dp">

                        <ImageButton
                            android:id="@+id/payicon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="#00000000"
                            android:elevation="0dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/payicon2w" />

                        <ImageButton
                            android:id="@+id/scanqricon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="35dp"
                            android:background="#00000000"
                            android:padding="1dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/scanqrwnew" />

                        <ImageButton
                            android:id="@+id/requesticon"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="35dp"
                            android:background="#00000000"
                            android:cropToPadding="true"
                            android:padding="1dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/sendw" />

                        <ImageButton
                            android:id="@+id/myqricon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="35dp"
                            android:background="#00000000"
                            android:cropToPadding="true"
                            android:padding="1dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/qrw" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/toprowtitles"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp">

                        <TextView
                            android:id="@+id/paytext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Pay"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/scanqrtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:gravity="center"
                            android:text="Scan QR"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/spliticon"
                            android:layout_width="43dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:gravity="center"
                            android:text="Request"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/myqrtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:gravity="center"
                            android:text="My QR"
                            android:textColor="#FFFFFF" />
                    </TableRow>

                </TableLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/balancecard"
                android:layout_width="395dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="-40dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="16dp"
                    android:paddingTop="5dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:id="@+id/walletbalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Wallet Balance" />

                    <TextView
                        android:id="@+id/amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="0dp"
                        android:layout_marginBottom="18dp"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        tools:text="amount" />

                    <Button
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/managebuttonborder"
                        android:text="Top-Up"
                        android:textColor="#F66080" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/midcards"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="-55dp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <TableLayout
                    android:id="@+id/midcardstable2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:id="@+id/row1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginRight="30dp">

                        <ImageButton
                            android:id="@+id/hawkfastbutton"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/buttonshadow"
                            android:elevation="10dp"
                            android:padding="15dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/foodicon" />

                        <ImageButton
                            android:id="@+id/insuranceicon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="35dp"
                            android:background="@drawable/buttonshadow"
                            android:padding="1dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/insuranceicon" />

                        <ImageButton
                            android:id="@+id/gvbutton"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="35dp"
                            android:background="@drawable/buttonshadow"
                            android:cropToPadding="true"
                            android:padding="1dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/igv" />

                        <ImageButton
                            android:id="@+id/chopebutton"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="35dp"
                            android:background="@drawable/buttonshadow"
                            android:cropToPadding="true"
                            android:padding="1dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/chope" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/row1titles"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp">

                        <TextView
                            android:id="@+id/hawkfast"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="FBC"
                            android:textColor="#131313" />

                        <TextView
                            android:id="@+id/insurance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:gravity="center"
                            android:text="Insurance"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/gv"
                            android:layout_width="43dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:gravity="center"
                            android:text="GV"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/chopetext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:gravity="center"
                            android:text="Chope"
                            android:textColor="#000000" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/row2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="30dp">

                        <ImageButton
                            android:id="@+id/capistarbutton"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/buttonshadow"
                            android:cropToPadding="true"
                            android:padding="2dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/capitastar" />

                        <ImageButton
                            android:id="@+id/qrgiftbutton"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="35dp"
                            android:background="@drawable/buttonshadow"
                            android:cropToPadding="true"
                            android:padding="2dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/qrgift" />

                        <ImageButton
                            android:id="@+id/eangbaobutton"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="35dp"
                            android:background="@drawable/buttonshadow"
                            android:cropToPadding="true"
                            android:padding="2dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/eangbao" />

                        <ImageButton
                            android:id="@+id/prepaidbutton"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="35dp"
                            android:background="@drawable/buttonshadow"
                            android:cropToPadding="true"
                            android:padding="2dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/prepaid" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/row2titles"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp">

                        <TextView
                            android:id="@+id/capistartext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Capistar"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/qrgifttext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:gravity="center"
                            android:text="QR Gift"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/eangbaotext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:gravity="center"
                            android:text="eAngBao"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/prepaidtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"
                            android:gravity="center"
                            android:text="Prepaid"
                            android:textColor="#000000" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/seemore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp">


                        <TextView
                            android:id="@+id/seemoretext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="See More"
                            android:textColor="#FA6F7A"
                            android:textSize="14sp" />
                    </TableRow>
                </TableLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#27000000"
                android:visibility="visible" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#27000000"
                android:visibility="visible" />

            <androidx.cardview.widget.CardView
                android:id="@+id/dealscard"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/recenttransactionscard"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>